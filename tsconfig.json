{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "node",
    "module": "ESNext",
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "./build",
    "esModuleInterop": true,
    "rewriteRelativeImportExtensions": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.test.ts"]
}
